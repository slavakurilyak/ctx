# ctx Configuration
# Copy this file to .env and update values as needed

# API Endpoint for ctx Pro features
CTX_API_ENDPOINT=https://api.ctx.click

# Optional: Override token model (anthropic, openai, gemini)
# CTX_TOKEN_MODEL=anthropic

# Optional: Set default timeout for commands
# CTX_TIMEOUT=2m

# Optional: Disable telemetry
# CTX_NO_TELEMETRY=false

# Optional: Enable private mode (disables history and telemetry)
# CTX_PRIVATE=false